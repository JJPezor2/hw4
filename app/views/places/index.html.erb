<div class="container mt-4">
  <h1 class="text-center">Places</h1>

  <div class="row mt-3">
    <% @places.each do |place| %>
      <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= place["name"] %></h5>
            <a href="/places/<%= place["id"] %>" class="btn btn-primary">View Place</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <p class="mt-3">
    <a href="/places/new" class="btn btn-success">New Place</a>
  </p>
</div>