<div class="container mt-4">
  <h1 class="text-center">New Place</h1>

  <form action="/places" method="post" class="mt-4">
    <div class="mb-3">
      <label for="name_input" class="form-label">Name</label>
      <input type="text" name="name" id="name_input" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a href="/places" class="btn btn-secondary">Cancel</a>
  </form>
</div>